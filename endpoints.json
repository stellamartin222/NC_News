{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [
      "author",
      "topic",
      "sort_by",
      "order"
    ],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an  object of the article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "lurker",
        "title": "cooking",
        "article_id": 3,
        "body": "Text from the article..",
        "topic": "coding",
        "created_at": 1527695953341,
        "votes": 10,
        "comment_count": "5"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves an  object of the article",
    "queries": [],
    "request_body": "{inc_votes: 10}",
    "exampleResponse": {
      "article": {
        "author": "lurker",
        "title": "cooking",
        "article_id": 3,
        "body": "Text from the article..",
        "topic": "coding",
        "created_at": 1527695953341,
        "votes": 20,
        "comment_count": "5"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comment objects of the article",
    "queries": [
      "sort_by",
      "order"
    ],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 2,
          "votes": 10,
          "created_at": 1527695953341,
          "author": "lurker",
          "body": "this is a good thing"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "serves an object of the posted comment",
    "queries": [],
    "requestBody": "{username: lurker, body: Good stuff}",
    "exampleResponse": {
      "comment": {
        "comment_id": 25,
        "votes": 0,
        "created_at": 1527695953341,
        "author": "lurker",
        "body": "Good stuff"
      }
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "serves an  object of the patched comment",
    "queries": [],
    "request_body": "{inc_votes: 10}",
    "exampleResponse": {
      "article": {
        "author": "lurker",
        "comment_id": 3,
        "article_id": 2,
        "body": "this is a comment",
        "created_at": 1527695953341,
        "votes": 20
      }
    }
  },
  "GET /api/comments/:comment_id": {
    "description": "serves an object of the comment",
    "queries": [],
    "requestBody": "{inc_votes: 10}",
    "exampleResponse": {
      "comment": {
        "comment_id": 25,
        "votes": 10,
        "created_at": 1527695953341,
        "author": "lurker",
        "body": "Good stuff"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment",
    "exampleResponse": "204 - no content"
  },
  "GET /api/users/:userid": {
    "description": "serves an object of the user",
    "parametricInputExample": "lurker",
    "exampleResponse": {
      "user": {
        "username": "lurker",
        "avatar_url": "http://www.GreatImage.com",
        "name": "marie"
      }
    }
  }
}